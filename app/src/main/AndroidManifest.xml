<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maxieds.chameleonminilivedebugger"
    android:installLocation="preferExternal" >

    <uses-sdk android:targetSdkVersion="30" android:minSdkVersion="30" />

    <permission-group
        android:name="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        android:label="@string/cmld_permgroup_minimal"
        android:icon="${appRoundIcon}"
        android:description="@string/cmld_permgroup_minimal"
        />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:permissionGroup="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        />
    <uses-permission
        android:name="android.permission.USB_PERMISSION"
        android:permissionGroup="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:permissionGroup="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        android:required="false"
        />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:permissionGroup="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        android:required="false"
        />
    <uses-permission
        android:name="android.permission.VIBRATE"
        android:permissionGroup="CMLD.permission-group.MINIMAL_APP_REQUIREMENTS"
        android:required="true"
        />

    <permission-group
        android:name="CMLD.permission-group.FILES_AND_STORAGE"
        android:label="@string/cmld_permgroup_storage"
        android:icon="${appRoundIcon}"
        android:description="@string/cmld_permgroup_storage"
        />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:permissionGroup="CMLD.permission-group.FILES_AND_STORAGE"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:permissionGroup="CMLD.permission-group.FILES_AND_STORAGE"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:permissionGroup="CMLD.permission-group.FILES_AND_STORAGE"
        android:required="true"
        />

    <permission-group
        android:name="CMLD.permission-group.BLUETOOTH_COMPENDIA"
        android:label="@string/cmld_permgroup_bluetooth"
        android:icon="${appRoundIcon}"
        android:description="@string/cmld_permgroup_bluetooth"
        />
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:permissionGroup="CMLD.permission-group.BLUETOOTH_COMPENDIA"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:permissionGroup="CMLD.permission-group.BLUETOOTH_COMPENDIA"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.BLUETOOTH_CONNECT"
        android:permissionGroup="CMLD.permission-group.BLUETOOTH_COMPENDIA"
        android:required="true"
        />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:permissionGroup="CMLD.permission-group.BLUETOOTH_COMPENDIA"
        android:required="true"
        />
    <!-- Available for SDK>=31 only (good to have set with BLUETOOTH_SCAN permission) :: android:usesPermissionFlags="neverForLocation" -->

    <uses-feature android:name="android.hardware.usb.host" android:required="true" />
    <uses-feature android:name="android.hardware.usb.accessory" android:required="false" />
    <uses-feature android:name="android.hardware.bluetooth" android:required="true" />
    <uses-feature android:name="android.hardware.bluetooth_admin" android:required="true" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />

    <protected-broadcast android:name="android.hardware.usb.action.USB_STATE" />

    <application
        android:name=".ChameleonMiniLiveDebugger"
        android:description="@string/app_desc"
        android:icon="${appIcon}"
        android:label="${appLabelDesc}"
        android:roundIcon="${appRoundIcon}"
        android:theme="${appTheme}"
        android:launchMode="singleTop"
        android:noHistory="false"
        android:excludeFromRecents="false"
        android:testOnly="${appDebug}"
        android:hardwareAccelerated="true"
        android:supportsRtl="true"
        android:manageSpaceActivity=".LiveLoggerActivity"
        android:defaultToDeviceProtectedStorage="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="false"
        android:installLocation="${installLocation}"
        tools:replace="android:installLocation"
        android:allowBackup="true"
        >

        <uses-library android:name="com.android.future.usb.accessory" />

        <activity
            android:name=".LiveLoggerActivity"
            android:screenOrientation="nosensor"
            android:alwaysRetainTaskState="true"
            android:clearTaskOnLaunch="true"
            android:hardwareAccelerated="true"
            android:uiOptions="none"
            android:stateNotNeeded="true"
            android:exported="true"
            >

            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
                <action android:name="android.bluetooth.device.action.ACTION_FOUND" />
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />
                <action android:name="ChameleonSerialIOInterface.SERIALIO_NOTIFY_BTDEV_CONNECTED" />
                <action android:name="ChameleonSerialIOInterface.SERIALIO_DEVICE_CONNECTION_LOST" />
                <action android:name="ChameleonSerialIOInterface.SERIALIO_DEVICE_FOUND" />
                <action android:name="ChameleonSerialIOInterface.SERIALIO_DATA_RECEIVED" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/chameleon_usb_device_filter"
                />
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/chameleon_usb_device_filter"
                />
            <meta-data
                android:name="android.bluetooth.device.action.ACTION_FOUND"
                android:resource="@xml/chameleon_bluetooth_device_filter"
                />
            <meta-data
                android:name="android.hardware.usb.action.ACL_CONNECTED"
                android:resource="@xml/chameleon_bluetooth_device_filter"
                />
            <meta-data
                android:name="android.bluetooth.device.action.ACL_DISCONNECTED"
                android:resource="@xml/chameleon_bluetooth_device_filter"
                />
            <meta-data
                android:name="ChameleonSerialIOInterface.SERIALIO_NOTIFY_BTDEV_CONNECTED"
                android:resource="@xml/custom_device_filter"
                />
            <meta-data
                android:name="ChameleonSerialIOInterface.SERIALIO_DEVICE_FOUND"
                android:resource="@xml/custom_device_filter"
                />
            <meta-data
                android:name="ChameleonSerialIOInterface.SERIALIO_DATA_RECEIVED"
                android:resource="@xml/custom_device_filter"
                />
            <meta-data
                android:name="ChameleonSerialIOInterface.SERIALIO_DEVICE_CONNECTION_LOST"
                android:resource="@xml/chameleon_bluetooth_device_filter"
                />

        </activity>

        <activity
            android:name=".CrashReportActivity"
            android:screenOrientation="nosensor"
            android:alwaysRetainTaskState="true"
            android:clearTaskOnLaunch="true"
            android:hardwareAccelerated="true"
            android:uiOptions="none"
            android:stateNotNeeded="true"
            android:exported="true"
            >

            <intent-filter>
                <action android:name=".CrashReportActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

    </application>

</manifest>