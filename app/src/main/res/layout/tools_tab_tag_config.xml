<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/tools_menu_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:orientation="vertical"
        android:scrollbarSize="25dp"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimaryDarkLog"
                android:drawableLeft="@drawable/settings16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Set configurations:"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="?colorAccentLog"
                android:columnCount="3"
                android:padding="2dp"
                android:rowCount="10">

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/binarymobile24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="ISO14443A_READER"
                    android:text="READER" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/binarysearch24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="ISO14443A_SNIFF"
                    android:text="SNIFF-14443A" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/binarysearch24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="ISO15693_SNIFF"
                    android:text="SNIFF-15693" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chipbrain2"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_DETECTION"
                    android:text="MF-DETECT" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chipbrain2"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_DETECTION_4K"
                    android:text="MF-DETECT-4K" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v2"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_CLASSIC_1K"
                    android:text="MFC-1K" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/card24v8"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_CLASSIC_1K_7B"
                    android:text="MFC-1K7B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/card24v9"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_CLASSIC_4K"
                    android:text="MFC-4K" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v4"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_CLASSIC_4K_7B"
                    android:text="MFC-4K7B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v15"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_CLASSIC_MINI_4B"
                    android:text="MFC-MINI-4B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v3"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_ULTRALIGHT"
                    android:text="MFU" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v10"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_ULTRALIGHT_C"
                    android:text="MFU-C" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/card24v6"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_ULTRALIGHT_EV1_80B"
                    android:text="MFU-EV1-80B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v1"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_ULTRALIGHT_EV1_164B"
                    android:text="MFU-EV1-164B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v14"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="MF_DESFIRE"
                    android:text="MF-DESFIRE" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v10"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="EM4233"
                    android:text="EM4233" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v12"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="NTAG215"
                    android:text="NTAG215" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v5"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="SL2S2002"
                    android:text="SL2S2002" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v11"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="TITAGITSTANDARD"
                    android:text="TITAGIT-STD" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v13"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="VICINITY"
                    android:text="VICINITY" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/blankchip24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:tag="NONE"
                    android:text="CFG-NONE" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimaryDarkLog"
                android:drawableLeft="@drawable/notes16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Appendix and troubleshooting: "
                android:textAllCaps="true"
                android:textStyle="bold|italic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorAccent"
                android:drawablePadding="5dp"
                android:singleLine="false"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textSize="10sp"
                android:typeface="serif"
                android:text="@string/chameleonConfigAppendixTroubleshooting"
                android:textColor="?colorPrimaryDark"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>